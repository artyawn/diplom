<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTask">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/discr_for_task"/>
    <EditText android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/et_new_tasks"
        android:layout_toStartOf="@+id/btn_add"/>
    <Button android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/et_new_tasks"
        android:layout_alignBottom="@+id/et_new_tasks"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_add"
        android:text="New"/>


</RelativeLayout>