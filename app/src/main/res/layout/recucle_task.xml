<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="title"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/title_descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_task"
                android:text="Описание"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="123"
                android:layout_below="@id/title_descr"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправитель"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:layout_below="@id/tv_description"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tv_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sender_title"
                android:layout_marginStart="8dp"
                android:text="123"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:textSize="20sp" />




            <TextView
                android:id="@+id/group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Группа"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_below="@id/tv_worker"/>

            <TextView
                android:id="@+id/tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="123"
                android:layout_below="@id/group_title"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp" />

        <Button
            android:id="@+id/btn_recycle"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" />

    </RelativeLayout>














</androidx.cardview.widget.CardView>